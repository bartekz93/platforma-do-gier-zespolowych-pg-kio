@using ProjektGrupowy.Models.Core;

<div class="header">
    @ProjektGrupowy.Resources.Labels.JoinToGame
</div>

<style>
    .joinGameFormTable td {
        padding: 10px;
    }
</style>

<form id="formJoinGame" method="post">
    <table style="width:50%; margin: auto" class="joinGameFormTable">
        <tr>
            <td style="padding: 10px">
                @ProjektGrupowy.Resources.Labels.GameId
            </td>
            <td>
                <div class="ui input">
                    <input name="gameId" />
                </div>
            </td>
        </tr>
        @if (!Platform.IsUserLogged())
        {
            <tr>
                <td style="padding: 10px">
                    @ProjektGrupowy.Resources.Labels.Nick
                </td>
                <td>
                    <div class="ui input">
                        <input name="Nick" />
                    </div>
                </td>
            </tr>
        }

        <tr>
            <td style="padding: 10px">
                @ProjektGrupowy.Resources.Labels.Password
            </td>
            <td>
                <div class="ui input">
                    <input type="password" name="Password" />
                </div>
            </td>
        </tr>
    </table>

    <div class="errors">

    </div>


    <div class="actions">
        <button class="ui blue button submit">
            @ProjektGrupowy.Resources.Labels.Join
        </button>
    </div>

</form>